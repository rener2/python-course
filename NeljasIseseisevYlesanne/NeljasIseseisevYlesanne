from tkinter import *
import random


def raamistik():
    aken = Tk()
    aken.geometry("700x400")
    aken["bg"] = "Blue"
    aken.mainloop()


def algus():
    aken = Tk()
    aken.geometry("700x400")
    aken["bg"] = "Blue"
    aken.mainloop()
    vihma_pilve_pilt = PhotoImage(file="vihmaPilv.png")
    tavalise_pilve_pilt = PhotoImage(file="tavalinePilv.png")
    ohukese_pilve_pilt = PhotoImage(file="ohukePilv.png")
    pilved(aken, tavalise_pilve_pilt, vihma_pilve_pilt, ohukese_pilve_pilt)


def pilved(aken, tavalise_pilve_pilt, vihma_pilve_pilt, ohukese_pilve_pilt):
    helves = Canvas(aken, bg="white", highlightthickness=0, width=100, height=50)
    xA = random.randint(0, 100)
    helves.place(x=xA, y=100)
    helves.create_image(50, 50, image=tavalise_pilve_pilt)
    helves.pack()


